{% extends 'base.html.twig' %}

{% block title %}News - Actualités{% endblock %}

{% block body %}

    <div class="container text-center">
        <div class="row">
            {% for new in news %}
                <div class="col-md-6 mt-4"> {# Chaque carte occupe la moitié de la largeur (6 colonnes sur 12) #}
                    <div class="card" style="max-width: 540px; margin: 0 auto;">
                        <div class="row g-0">
                            <div class="col-md-4 ">
                                <img src="{{ asset('images/news/img1.png') }}" class="img-fluid rounded-start" alt="{{ new.title }}">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-start">{{ new.title | slice(0, 20) }}{% if new.content|length > 20 %}...{% endif %}</h5>
                                    <p class="card-text text-start">{{ new.content |slice(0, 150) }}{% if new.content|length > 150 %}...{% endif %}</p>

                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-{{ loop.index }}">
                                        En savoir plus
                                    </button>

                                    <div class="modal fade" id="exampleModal-{{ loop.index }}" tabindex="-1" aria-labelledby="exampleModalLabel-{{ loop.index }}" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel-{{ loop.index }}">{{ new.title }}</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>{{ new.content }}</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="pt-5 d-flex justify-content-center">
        {{ knp_pagination_render(news) }}
    </div>



{% endblock %}
