<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="myProjects/webProject/icofont/css/icofont.min.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

    </head>
    <body>
        {% include 'partials/navbar.html.twig' %}
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} alert-dismissible mt-2 flash-message">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}

        {% include 'partials/footer.html.twig' %}
        <script>
            // Attendre que la page soit complètement chargée
            document.addEventListener('DOMContentLoaded', function () {
                // Sélectionner tous les messages flash
                const flashMessages = document.querySelectorAll('.flash-message');

                // Parcourir les messages et les masquer après 10 secondes
                flashMessages.forEach((message) => {
                    setTimeout(() => {
                        message.style.transition = "opacity 1s"; // Transition en douceur
                        message.style.opacity = "0"; // Rendre invisible
                        setTimeout(() => message.remove(), 1000; // Supprimer du DOM après la transition
                    }, 1000); // 10 secondes
                });
            });
        </script>
    </body>
</html>
