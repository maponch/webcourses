{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home')}}">WebCourses</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_courses') }}">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_news')}}">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        {% if not app.user %}
                        <a href="#" class="btn btn-outline-dark">S'identifier</a>&nbsp;&nbsp;
                        <a href="#" class="btn btn-outline-dark">S'enregistrer</a>
                        {% else %}
                        <div class="nav-item dropdown" style="padding-right: 50px;">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                <img src="{{ asset('images/avatar/' ~ app.user.imageName) }}" alt="" class="img-menu">
                                {{ app.user.firstName }} {{ app.user.lastName }}
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Mon profile</a>
                                <a class="dropdown-item" href="#">Modifier le profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('app_admin_post') }}">Administration</a>
                                {% endif %}
                            </div>
                        </div></div>
                    {% endif %}
                </div>
            </div>
            </div>
        </nav>
        <div class="banner"></div>
    </header>
{% endblock header %}